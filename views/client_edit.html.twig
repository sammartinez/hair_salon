<html>
    <head>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/styles.css" media="screen" charset="utf-8">
        <title>Hair Salon!</title>
    </head>
    <body>
        <div class="container">

            <h1>Update your {{ client.getClientName }} name </h1>

            <form action="/stylists/{{ stylist.getId }}" method="post">
              <input name="_method" type="hidden" value="patch">

              <label for="stylist_name">Rename your client:</label>
              <input id="name" name="stylist_name" type="text">

              <button type="submit" class= "btn btn-info">Update</button>
            </form>

            <form action="/clients/{{ client.getId }}" method="post">
                <input name="_method" type="hidden" value="delete">

                <button type="submit" class="btn btn-default">Delete this client</button>
            </form>
        </div>
    </body>
</html>
